<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LeaderBoard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Most Donations"
                        android:textSize="32sp"
                        android:fontFamily="@font/productsans"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:id="@+id/most_donation"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignRight="@+id/most_donation"
                        android:layout_margin="8dp"
                        android:src="@drawable/expand" />
                </RelativeLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/most_donation_table"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/productsans"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TableRow
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:text="Name"
                            android:fontFamily="@font/productsans"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="32sp"/>

                        <TextView
                            android:text="Donations"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/productsans"
                            android:layout_weight="1"
                            android:textSize="32sp"
                            android:gravity="center"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recent Donations"
                        android:textSize="32sp"
                        android:fontFamily="@font/productsans"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:id="@+id/recent_donations"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignRight="@+id/recent_donations"
                        android:layout_margin="8dp"
                        android:src="@drawable/expand" />
                </RelativeLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_donations_table"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/productsans"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TableRow
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:text="Name"
                            android:fontFamily="@font/productsans"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="32sp"/>

                        <TextView
                            android:text="Donations"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/productsans"
                            android:layout_weight="1"
                            android:textSize="32sp"
                            android:gravity="center"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
